// -*- mode: jsonc -*-
{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 26,
  // Choose the order of the modules
  "modules-left": [
    
    "sway/workspaces",
    "sway/mode",
    "sway/scratchpad",
    "sway/window"
  ],
  "modules-right": [
    "tray",
    "network",
    "pulseaudio",
    "battery",
    "battery#bat2",
    "clock",
    "custom/swaync",
    "custom/power",
    
  ],
  "tray": {
